@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new Engineer</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@required="required"})

  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty, new {@required="required"})

  <input type="submit" value="Add new engineer" class="btn btn-outline-success">
}
<p>@Html.ActionLink("Show all engineers", "Index")</p>